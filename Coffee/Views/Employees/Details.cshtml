@model Coffee.Models.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Employee Details - @Model.EmployeeCode</h3>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Employee Code</dt>
                        <dd class="col-sm-8">@Model.EmployeeCode</dd>

                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.FullName</dd>

                        <dt class="col-sm-4">Department</dt>
                        <dd class="col-sm-8">@Model.Department</dd>

                        <dt class="col-sm-4">Position</dt>
                        <dd class="col-sm-8">@Model.Position</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Phone Number</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "Active" ? "bg-success" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="card-footer">
            <div class="form-group">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>