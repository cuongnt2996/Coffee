@model Coffee.Models.DTOs.EmployeeDto

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title">Confirm Delete</h3>
        </div>
        
        <div class="card-body">
            <h4>Are you sure you want to delete this employee?</h4>
            <dl class="row">
                <dt class="col-sm-3">Employee Code</dt>
                <dd class="col-sm-9">@Model.EmployeeCode</dd>

                <dt class="col-sm-3">Full Name</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Department</dt>
                <dd class="col-sm-9">@Model.Department</dd>

                <dt class="col-sm-3">Position</dt>
                <dd class="col-sm-9">@Model.Position</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    @* <span class="badge @(Model.Status == 1 ? "bg-success" : "bg-secondary")">
                        @Model.Status
                    </span> *@
                    <span class="badge bg-success"">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>
        
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>